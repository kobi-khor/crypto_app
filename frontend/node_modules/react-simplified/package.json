{
  "name": "react-simplified",
  "version": "3.0.3",
  "description": "Easier React programming.",
  "keywords": [
    "bind",
    "es6 proxy",
    "observable",
    "react-component",
    "react",
    "reactjs",
    "state management"
  ],
  "author": "Ole Christian Eidheim <eidheim@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/eidheim/react-simplified/issues"
  },
  "homepage": "https://gitlab.com/eidheim/react-simplified",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/eidheim/react-simplified.git"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "lint": "eslint src",
    "test": "jest",
    "build": "babel src --out-dir lib --copy-files",
    "prepublishOnly": "npm run build"
  },
  "pre-push": [
    "lint",
    "test"
  ],
  "jest": {
    "testRegex": "./tests/.+Test\\.js$",
    "setupFiles": [
      "./tests/setup.js"
    ],
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 90,
        "functions": 100,
        "lines": 100
      }
    }
  },
  "browserslist": [
    "defaults",
    "not <= 0.2%",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "@nx-js/observer-util": "^4.2.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.15.0",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.3",
    "babel-jest": "^27.0.6",
    "enzyme": "^3.11.0",
    "eslint": "^7.32.0",
    "eslint-plugin-react": "^7.24.0",
    "jest": "^27.0.6",
    "pre-push": "^0.1.1"
  }
}
